@model IEnumerable<PorthospNhs.Web.Models.PatientViewModel>

@{
    ViewBag.Title = "Home Page";
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UniqueIdentifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Forenames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postcode)
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UniqueIdentifier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Forenames)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Postcode)
                </td>
            </tr>
        }


    </table>
}
else
{
    @Html.DisplayName("No records found")
}